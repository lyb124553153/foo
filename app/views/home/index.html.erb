<div class="container">
  <div class="card">
    <div class="card-body">
      <%= form_with model: @link, remote: true, class: "form-group" do |form| %>
        <%= form.text_field :origin_url, class: "form-control", placeholder: "Enter the link" %>
        <%= form.submit "Shorten", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div id="short-link">
    </div>
  </div>
</div>
